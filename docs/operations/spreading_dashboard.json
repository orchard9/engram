    {
      "id": 4,
      "type": "stat",
      "title": "Circuit Breaker State",
      "gridPos": {"x": 0, "y": 8, "w": 6, "h": 6},
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": ""},
        "orientation": "horizontal"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max(engram_spreading_breaker_state)",
          "legendFormat": "state"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",

{
  "title": "Spreading Activation Operations",
  "uid": "spreading-ops",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "tags": ["engram", "spreading"],
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Hot Tier Latency (p50/p95/p99)",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(engram_spreading_latency_hot_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(engram_spreading_latency_hot_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(engram_spreading_latency_hot_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },

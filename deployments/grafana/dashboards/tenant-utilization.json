{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "datasource",
          "uid": "grafana"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "description": "Throughput per tenant aggregated across all Engram instances.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "displayMode": "gradient",
        "max": 10,
        "min": 0,
        "orientation": "horizontal",
        "showUnfilled": true
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(engram_spreading_activations_total{memory_space!\"\"}[5m])) by (memory_space))",
          "format": "time_series",
          "legendFormat": "{{memory_space}}",
          "refId": "A"
        }
      ],
      "title": "Top Tenants by Activation Throughput",
      "type": "bargauge"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "description": "Latency percentiles per tenant. Requires memory_space labels in the exporter.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "engram_spreading_latency_hot_seconds{quantile=\"0.95\", memory_space=~\"$memory_space\"}",
          "legendFormat": "Hot P95 ({{memory_space}})",
          "refId": "A"
        },
        {
          "expr": "engram_spreading_latency_cold_seconds{quantile=\"0.95\", memory_space=~\"$memory_space\"}",
          "legendFormat": "Cold P95 ({{memory_space}})",
          "refId": "B"
        }
      ],
      "title": "Tenant Latency",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "description": "Storage footprint per memory space.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "id": 3,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(engram_tier_size_bytes{memory_space=~\"$memory_space\"}) by (memory_space)",
          "legendFormat": "{{memory_space}}",
          "refId": "A"
        }
      ],
      "title": "Storage Utilization by Memory Space",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "description": "Error budgets per tenant based on SLO violations.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "ops"
        }
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "id": 4,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(engram_spreading_latency_budget_violations_total{memory_space=~\"$memory_space\"}[5m])) by (memory_space)",
          "legendFormat": "{{memory_space}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(engram_spreading_failures_total{memory_space=~\"$memory_space\"}[5m])) by (memory_space)",
          "legendFormat": "Failures {{memory_space}}",
          "refId": "B"
        }
      ],
      "title": "Tenant Error Budgets",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "description": "Episode counts per tenant for capacity planning.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 18
      },
      "id": 5,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(engram_episodes_total{memory_space=~\"$memory_space\"}) by (memory_space)",
          "legendFormat": "{{memory_space}}",
          "refId": "A"
        }
      ],
      "title": "Episode Count by Memory Space",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": [
    "engram",
    "tenants",
    "memory-space"
  ],
  "templating": {
    "list": [
      {
        "current": {
          "selected": false,
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 0,
        "includeAll": false,
        "label": "Datasource",
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "skipUrlSync": false,
        "type": "datasource"
      },
      {
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        },
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "definition": "label_values(engram_spreading_activations_total, memory_space)",
        "hide": 0,
        "includeAll": true,
        "label": "Memory Space",
        "multi": true,
        "name": "memory_space",
        "options": [],
        "query": "label_values(engram_spreading_activations_total, memory_space)",
        "refresh": 2,
        "skipUrlSync": false,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h"
    ]
  },
  "timezone": "browser",
  "title": "Engram Tenant Utilization",
  "uid": "engram-tenant-utilization"
}

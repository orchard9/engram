apiVersion: v1
kind: Secret
metadata:
  name: engram-secret
type: Opaque
stringData:
  # Example: API keys for external services
  # api-key: "your-api-key-here"

  # Example: Database credentials (if using external storage)
  # db-username: "engram"
  # db-password: "change-me"

  # Example: TLS certificates (for Task 008)
  # tls-cert: |
  #   -----BEGIN CERTIFICATE-----
  #   ...
  #   -----END CERTIFICATE-----
  # tls-key: |
  #   -----BEGIN PRIVATE KEY-----
  #   ...
  #   -----END PRIVATE KEY-----
